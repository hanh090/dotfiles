{
  "coc.source.file.ignorePatterns": ["node_modules/*"],
  "diagnostic.messageTarget": "echo",
  "diagnostic.refreshAfterSave": true,
  "eslint.options": {
    "ignorePattern": ["node_modules/*", "*.bs.js"]
  },
  "eslint.run": "onSave",
  "reason_language_server.reloadOnChange": true,
  "prettier.eslintIntegration": true,
  "suggest.timeout": 6000,
  "solargraph.autoformat": true,
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  "yank.highlight.enable": false,
  "workspace.ignoredFiletypes": ["log", "txt", "help", "class", "jar"]
}
